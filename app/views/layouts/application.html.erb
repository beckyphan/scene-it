<!DOCTYPE html>
<html>
  <head>
    <title>SceneIt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Bebas+Neue|Lora:400,400i,700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav>
    <% if logged_in? %>
      <div class="user_home">
        <span class="link"><%= link_to "Dashboard", user_path(current_user) %></span>
      </div>
      <div>
        <span class="link"><%= link_to "Movies", movies_path %></span>
        <span class="link"><%= link_to "Events", movies_path %></span>
        <span class="link"><%= link_to "Log Out", session_logout_path, method: "delete" %></span>
      </div>
    <% end %>
  </nav>

  <body>
    <%= flash[:message] %>
    <%= yield %>
  </body>
</html>
